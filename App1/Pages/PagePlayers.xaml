<Page
    x:Class="App1.PagePlayers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid x:Name="GridMain">
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup>
				<VisualState x:Name="Narrow">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="0" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="GridEditableElements.(Grid.Column)" Value="0"/>
						<Setter Target="GridEditableElements.(Grid.Row)" Value="1"/>
						<Setter Target="GridMain.ColumnDefinitions[1].Width" Value="auto"/>
						<Setter Target="GridEditableElements.ColumnDefinitions[0].Width" Value="*"/>
						<Setter Target="GridEditableElements.ColumnDefinitions[3].Width" Value="*"/>
					</VisualState.Setters>
				</VisualState>

				<VisualState x:Name="Compact">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="720" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="GridEditableElements.(Grid.Column)" Value="1"/>
						<Setter Target="GridEditableElements.(Grid.Row)" Value="0"/>
						<Setter Target="GridMain.ColumnDefinitions[1].Width" Value="*"/>
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<Grid Grid.Column="0" Grid.Row="0" x:Name="GridMenu" Margin="10,0,10,0">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="12*"/>
			</Grid.RowDefinitions>

			<Grid Grid.Row="0" BorderBrush="#FFF2F2F2" BorderThickness="1" Padding="10" Margin="0,0,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition Width="auto"/>
				</Grid.ColumnDefinitions>

				<Button Grid.Column="0" Grid.Row="0" x:Name="ButtAdd" Content="Add new" VerticalAlignment="Center" Click="ButtAdd_Click" HorizontalAlignment="Center" Margin="0,0,10,0"/>
				<Button Grid.Column="1" Grid.Row="0" x:Name="ButtEditSelected" Content="Edit" VerticalAlignment="Center" Click="ButtEditSelected_Click" HorizontalAlignment="Center" Margin="0,0,10,0"/>
				<Button Grid.Column="2" Grid.Row="0" x:Name="ButtRemoveDB" Content="Remove" VerticalAlignment="Center" Click="ButtRemoveDB_Click" HorizontalAlignment="Center" Margin="0,0,10,0"/>
			</Grid>

			<Grid Grid.Row="1" BorderBrush="#FFF2F2F2" BorderThickness="1" Padding="10" Margin="0,5,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<TextBox Grid.Column="0" x:Name="TextBoxFindName" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="TextBoxFindName_TextChanged" PlaceholderText="Find Name" Margin="5,0,5,0"/>
				
				<StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,5,0">
					<TextBlock Text="Birthday" Margin="0,0,10,0" VerticalAlignment="Center"/>
					<Button Grid.Column="0" x:Name="ButtSortBirthday" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ButtSortBirthday_Click">
						<SymbolIcon Symbol="Sort"/>
					</Button>
				</StackPanel>
			</Grid>

			<ListView Grid.Row="2" x:Name="ListViewItems" HorizontalAlignment="Stretch" SelectionChanged="ListViewItems_SelectionChanged" Margin="10,10,10,10" Width="auto" Height="300" VerticalAlignment="Top"/>
		</Grid>

		<Grid Grid.Column="1" Grid.Row="0" x:Name="GridEditableElements" VerticalAlignment="Stretch" Background="#FFF2F2F2" Margin="10, 10, 10, 10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="10"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="10"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>

			<TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Text="ID:" TextWrapping="Wrap" VerticalAlignment="Center" Height="19" Margin="0,5,0,5"/>
			<TextBox Grid.Row="0" Grid.Column="2" x:Name="TextBoxID" HorizontalAlignment="Left" Text="" VerticalAlignment="Center" IsReadOnly="True" PlaceholderText="0-..." Height="29" AutomationProperties.HelpText="nID" Margin="0,5,0,5" FontFamily="Segoe UI" Tag="number"/>

			<TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="0,5,0,5" Text="First name:" TextWrapping="Wrap" VerticalAlignment="Top"/>
			<TextBox Grid.Row="1" Grid.Column="2" x:Name="TextBoxFirstName" HorizontalAlignment="Left" Margin="0,5,0,5" Text="" VerticalAlignment="Top" PlaceholderText="First name"/>

			<TextBlock Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Margin="0,5,0,5" Text="Surname:" TextWrapping="Wrap" VerticalAlignment="Top"/>
			<TextBox Grid.Row="2" Grid.Column="2" x:Name="TextBoxSurname" HorizontalAlignment="Left" Margin="0,5,0,5" Text="" VerticalAlignment="Top" PlaceholderText="Surname"/>

			<TextBlock Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Margin="0,5,0,5" Text="Birthday:" TextWrapping="Wrap" VerticalAlignment="Top"/>
			<CalendarDatePicker Grid.Row="3" Grid.Column="2" x:Name="DatePickerBirthday" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Top" DayOfWeekFormat="{}{dayofweek.abbreviated}" PlaceholderText="select a date" FirstDayOfWeek="Monday" DateFormat="{}{day.integer} {month.full} {year.full}"/>

			<TextBlock Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Margin="0,5,0,5" Text="Position:" TextWrapping="Wrap" VerticalAlignment="Top"/>
			<ComboBox Grid.Row="4" Grid.Column="2" x:Name="ComboBoxPosition" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Top" Width="153"/>

			<Button Grid.Row="5" Grid.Column="2" x:Name="ButtAddToDB" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ButtAddToDB_Click" RenderTransformOrigin="0.5,0.5" Height="29" Margin="0,5,0,5"/>
			<Button Grid.Row="5" Grid.Column="2" x:Name="ButtEditDB" Content="Edit" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ButtEditDB_Click" Height="29" Margin="0,5,0,5"/>
		</Grid>
	</Grid>

</Page>
